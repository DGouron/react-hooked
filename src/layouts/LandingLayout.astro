
---
import { ViewTransitions } from 'astro:transitions';
import MainNav from '../components/nav/MainNav.astro';
import GithubIcon from '../components/icons/GithubIcon.astro';
import { GITHUB_REPO_URL } from '../utils/constants';

interface Props {
  title: string;
  selectedPage: string;
}

---
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/style.css" />
    <title>React Hooked ü™ù</title>
    <ViewTransitions />
  </head>
  <body class="dark:ctp-mocha ctp-latte bg-ctp-base text-ctp-text antialiased">
    <div class="">
      <div class="sticky bg-ctp-base top-0 px-6 py-5 sm:px-8 z-50 lg:flex lg:h-16 lg:items-center lg:py-0">
        <MainNav />
      </div>
      <div class="px-0">
        <slot /> 
      </div>
    </div>
    <!-- <Footer /> -->
    <footer class="bg-ctp-base text-ctp-text">
      <div class="container mx-auto px-6 py-8">
        <div class="flex flex-col items-center justify-center gap-8">
          <a class="text-sm/6 font-medium hover:underline" href={GITHUB_REPO_URL} target="_blank" aria-label="Github" title="Github">
            <GithubIcon class="w-6 h-6" />
          </a>
          <div>
            Made with ‚ù§Ô∏è by <a href="https://mgilet.xyz" target="_blank" class="text-ctp-blue hover:underline">Maximilien Gilet</a>
